<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>ZeroBite — Available Pickups</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="page">

    <!-- Navbar (same as homepage) -->
    <header class="topbar">
      <div class="container">
        <div class="brand">
          <!-- Leaf logo -->
          <svg class="brand-logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" aria-hidden="true">
            <path d="M32 4C18 12 8 26 8 40c0 10 7 20 24 20s24-10 24-20C56 26 46 12 32 4z" fill="#009957"/>
            <path d="M32 12c-6 12-6 28 0 40" stroke="white" stroke-width="3" stroke-linecap="round"/>
          </svg>
          <div class="brand-text">
            <div class="brand-title">ZeroBite</div>
            <div class="brand-sub">Share • Rescue • Care</div>
          </div>
        </div>

        <nav class="main-nav">
          <a class="nav-item" href="/zerobite">Home</a>
          <a class="nav-item active" href="/zerobite/donations">Donations</a>
          <a class="nav-item" href="/zerobite/donate">Donate</a>
          <a class="nav-item" href="/zerobite/volunteer">Volunteer</a>
          <a class="nav-item" href="/zerobite/analytics">Analytics</a>
          <a class="nav-item" href="/zerobite/rewards">Rewards</a>
        </nav>

        <div class="top-actions">
          <% if (user) { %>
            <span class="welcome-user">Welcome, <%= user.name %></span>
            <form method="post" action="/zerobite/logout" style="display:inline;">
              <button class="btn ghost welcome-user">Logout</button>
            </form>
            <% } else { %>
              <button class="btn ghost" id="loginButton">Login</button>
              <button class="btn primary" id="getStartedButton">Get Started</button>
              <% } %>
        </div>
      </div>
    </header>

    <!-- Page hero -->
    <section class="page-hero">
      <div class="container">
        <h1 class="page-title">Available Pickups</h1>
        <p class="page-subtitle">Reserve nearby donations and help redistribute surplus food.</p>
      </div>
    </section>

    <!-- Filters/Search -->
    <section class="filters-wrap">
      <div class="container">
        <div class="filters-bar">
          <div class="filter search">
            <input type="text" placeholder="Search items, e.g. bread, rice..." aria-label="Search">
          </div>

          <div class="filter">
            <label class="filter-label" for="category">Category</label>
            <select id="category">
              <option>All</option>
              <option>Cooked Meals</option>
              <option>Bakery</option>
              <option>Produce</option>
              <option>Dairy</option>
            </select>
          </div>

          <div class="filter">
            <label class="filter-label" for="distance">Distance</label>
            <select id="distance">
              <option>Within 2 km</option>
              <option>Within 5 km</option>
              <option>Within 10 km</option>
            </select>
          </div>

          <div class="filter check">
            <label class="checkbox"><input type="checkbox" id="vegOnly"> Veg only</label>
          </div>

          <div class="filter check">
            <label class="checkbox"><input type="checkbox" id="availableNow" checked> Available now</label>
          </div>

          <div class="filter">
            <label class="filter-label" for="sort">Sort by</label>
            <select id="sort">
              <option>Nearest</option>
              <option>Ending soon</option>
              <option>Newest</option>
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- Cards grid -->
    <section class="donations-cards">
      <div class="container cards-grid">
       <% donations.forEach(donation => { %>
  <article class="donation-card" data-category="<%= donation.foodType %>" data-veg="true">
    <div class="card-left">
      <img class="thumb" src="<%= donation.foodImage %>" alt="<%= donation.itemName %>">
    </div>
    <div class="card-mid">
      <div class="title-row">
        <h3 class="item-title"><%= donation.itemName %></h3>
        <span class="tag green">Veg</span> <!-- or detect non-veg if you have that info -->
        <span class="tag"><%= donation.foodType %></span>
      </div>
      <div class="meta-row">
        <span class="meta">
          <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2C8.7 2 6 4.7 6 8c0 4.2 6 12 6 12s6-7.8 6-12c0-3.3-2.7-6-6-6zm0 8.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z" />
          </svg>
          Pickup: <%= donation.pickupLocation %>
        </span>
        <span class="meta">
          <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm.8 5h-1.6v6l5.2 3 .8-1.3-4.4-2.6V7z" />
          </svg>
          Pickup Time: <%= donation.timeAvailable %>
        </span>
      </div>
      <div class="facts-row">
        <span class="fact">
          <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M3 7l9-4 9 4-9 4-9-4zm0 4l9 4 9-4v6l-9 4-9-4v-6z" />
          </svg>
          Quantity: <%= donation.quantity %> <%= donation.unit %>
        </span>
        <% if (donation.notes) { %>
          <span class="fact">
            <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 2C7 5 4 10 4 14c0 3 2 6 8 6s8-3 8-6c0-4-3-9-8-12z" />
            </svg>
            Notes: <%= donation.notes %>
          </span>
        <% } %>
      </div>
    </div>
    <div class="card-right">
     
      <button class="btn primary pickup-btn" data-id="<%= donation._id %>">Pick up</button>
      <button class="btn ghost details-btn" onclick="showDetails('<%= donation._id %>')">Details</button>
      <div class="expires">Available on <%= donation.dateAvailable.toISOString().slice(0,10) %></div>
    </div>
  </article>
<% }) %>


      </div>
    </section>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="container footer-grid">
        <div>© 2025 ZeroBite</div>
        <div class="footer-links">
          <a href="#">Privacy</a> · <a href="#">Terms</a> · <a href="#">Contact</a>
        </div>
      </div>
    </footer>

  </div>

  <script src="js/script.js"></script>
</body>
</html>
